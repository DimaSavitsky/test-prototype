body{
  font-family: 'Open Sans', sans-serif;
  background-color: rgba(229, 237, 239, 0.7);
}

a{
  color: #3aa5db;
}

.btn-default{
  background-color: #f6d53d;
  box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.3);
  font: 600 16px/60px 'Open Sans';
  color: #444444;
  text-transform: uppercase;
  padding: 0 20px;
  height: 60px;
  border-radius: 4px;
  display: inline-block;
  color: #444444;
  -webkit-transition: all .3s ease;
  -moz-transition: all .3s ease;
  transition: all .3s ease;
  vertical-align: top;
  &:hover, &:active, &:focus{
    background-color: #dfbf29;
    text-decoration: none;
    color: #222222;
  }
}

.btn-transparent{
  background: transparent;
  box-shadow: none;
  border: 1px solid #cccccc;
  
  &:hover, &:active, &:focus{
    background-color: transparent;
    color: #444444;
    border-color: #999999;
  }
}

input.btn-default{
  border: none;
  min-width: 104px;
}

body.login_page{
  background: url(<%= asset_path 'login-page.jpg' %>) no-repeat center center, #51636c;
  width: 100%;
  height: 100%;
  height: 100vh;
  min-height: 700px;
  position: relative;
}

.login-holder{
  width: 400px;
  background-color: #ffffff;
  box-shadow: 0px 20px 70px 0.00px rgba(0, 0, 0, 0.5);
  margin: 0 auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 4px;
  
  .login-container{
    padding: 0 40px;
  }
  
  .login-logo{
    margin: 65px 0;
    text-align: center;
  }
  
  input{
    background-color: #edf2f4;
    border: none;
    border-radius: 4px;
  
    &[type="text"],&[type="email"],&[type="password"],&[type="submit"]{
      margin-bottom: 20px;
      padding: 18px 20px;
      font: 400 18px / 24px 'Open Sans';
      color: #999999;
      height: 60px;
      width: 100%;
      border: 1px solid #dddddd;
      
      &:hover, &:focus{
        background-color: #ffffff;
      }
    }
  
    &[type="checkbox"]{
      width: 20px;
      height: 20px;
      background-color: #edf2f4;
      vertical-align: middle;
      cursor: pointer;
    }
    
    &[type="submit"]{
      background-color: #f6d53d;
      box-shadow: 0px 1px 0px 0px rgba(0, 0, 0, 0.3);
      font: 600 16px/20px 'Open Sans';
      color: #444444;
      text-transform: uppercase;
      margin: 40px 0;
      
      &:hover, &:active, &:focus{
        background-color: #dfbf29;
      }
  
      &.sign-up-button, &.send-instructions-button{
        margin-top: 0;
      }
    }
  }
    
  label{
    margin-bottom: 0;
    vertical-align: middle;
    font: 400 14px / 24px 'Open Sans';
    cursor: pointer;
    -webkit-user-select: none;  /* Chrome all / Safari all */
    -moz-user-select: none;     /* Firefox all */
    -ms-user-select: none;      /* IE 10+ */
    user-select: none;          
  }
  
  .field-remeber{
    
  }
  
  .field-forget{
    text-align: right;
    color: #3aa5db;
    font: 400 14px / 26px 'Open Sans';
  }
  
  .login-divider {
    width: 100%;
    height: 1px;
    background-color: #edf2f4;
  }

  .form-bottom-link {
    text-align: center;
    color: #999999;
    font: 400 16px / 24px 'Open Sans';
    margin: 40px 0;
    
    a{
      font: 700 16px / 24px 'Open Sans';
    }
  }
}

.navbar{
  background-color: #51636c;
  height: 80px;
  padding: 0;
  border-radius: 0;
  
  &-brand{
    padding: 0;
    line-height: 80px;
    
    & > img{
      display: inline-block;
    }
  }
  
  &-nav{
    
    .nav-item{
      padding: 0 10px;
    }
    
    .nav-link{
      padding: 30px 0;
      color: #869ca7;
      font: 300 20px / 20px 'Open Sans Condensed';
      text-transform: uppercase;
      position: relative;
      
      &:before{
        content: '';
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        height: 2px;
        width: 100%;
        background-color: #f6d53d;
      }
      
      &:hover, &:active{
        &:before{
          display: block; 
        }
      }
      
      &:hover, &:active{
        color: #ffffff;
      }
    }
  }
  
