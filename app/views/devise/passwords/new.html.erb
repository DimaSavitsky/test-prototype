<div class="login-logo"><img src="<%= asset_path 'login-logo.png' %>" alt="Career Navigator"></div>

<div class="login-container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>
  </div>

  <div class="actions">
    <%= f.submit "Send instructions", class: 'send-instructions-button' %>
  </div>
<% end %>
</div>

<div class="login-divider"></div>

<div class="login-container">
  <p class="form-bottom-link"><%= link_to "Back to log in", new_session_path(resource_name) %> or <%= link_to "Sign up", new_registration_path(resource_name) %></p>
</div>
