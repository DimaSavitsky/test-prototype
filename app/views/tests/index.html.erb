<div class="row">
   <%- @tests.each do |test| %>
    <div class="col-md-3 test-col">
      <div>
        <%= link_to test_path(test), class: 'test-image-wrapper overlay-fade-in' do %>

          <img src="<%= test.image_url %>" alt="Card image">

          <div class="image-overlay-content">
            <h3>Open test</h3>
          </div>

        <% end %>
        <h4><%= test.name %></h4>
        <p><%= test.questions.length %> questions</p>
      </div>
    </div>
  <%- end %>
</div>